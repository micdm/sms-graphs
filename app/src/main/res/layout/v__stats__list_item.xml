<com.micdm.smsgraphs.misc.CategoryStatsListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/v__stats__list_item__name"
        android:layout_weight="1"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v__stats__list_item__amount"
        android:textSize="20sp"/>
</com.micdm.smsgraphs.misc.CategoryStatsListItemView>
